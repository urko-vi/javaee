<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>HelloWeb</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Servlet que valida el logueo</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Controla el fin de sesion</description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>CRUD para Persona</description>
    <display-name>PersonaServlet</display-name>
    <servlet-name>PersonaServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.PersonaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PersonaServlet</servlet-name>
    <url-pattern>/persona.do</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>http://www.formacion.ipartek.com</taglib-uri>
      <taglib-location>/WEB-INF/tag/tag_hello.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://www.formacion.ipartek.com/tags/util</taglib-uri>
      <taglib-location>/WEB-INF/tag/selectOptions.tld</taglib-location>
    </taglib>
  </jsp-config>
  <listener>
    <listener-class>com.ipartek.formacion.helloweb.listener.SessionListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.ipartek.formacion.helloweb.listener.InitListener</listener-class>
  </listener>
  <filter>
    <display-name>ServletFilter</display-name>
    <filter-name>ServletFilter</filter-name>
    <filter-class>com.ipartek.formacion.helloweb.filter.ServletFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ServletFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>IdiomaServlet</display-name>
    <servlet-name>IdiomaServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.IdiomaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IdiomaServlet</servlet-name>
    <url-pattern>/idioma.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>RolServlet</display-name>
    <servlet-name>RolServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.RolServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RolServlet</servlet-name>
    <url-pattern>/rol.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CalificacionServlet</display-name>
    <servlet-name>CalificacionServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.CalificacionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalificacionServlet</servlet-name>
    <url-pattern>/calificacion.do</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>LoadErrorFilter</display-name>
    <filter-name>LoadErrorFilter</filter-name>
    <filter-class>com.ipartek.formacion.helloweb.filter.LoadErrorFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoadErrorFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>JspFilter</display-name>
    <filter-name>JspFilter</filter-name>
    <filter-class>com.ipartek.formacion.helloweb.filter.JspFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>JspFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <servlet>
    <description>Que capture datos del fomrulario y lo devuelva el HTML o JSON</description>
    <display-name>EjemploParameterServlet</display-name>
    <servlet-name>EjemploParameterServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.EjemploParameterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EjemploParameterServlet</servlet-name>
    <url-pattern>/ejemploParameterServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>SessionServlet</display-name>
    <servlet-name>SessionServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.helloweb.controler.SessionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SessionServlet</servlet-name>
    <url-pattern>/session.do</url-pattern>
  </servlet-mapping>
 <error-page>
  <error-code>404</error-code>
  <location>/errorpage.jsp</location>
</error-page>   
</web-app>